{% extends "base.twig" %}

{% block content %}
    <article>
        <h1 class="mb-3">{{ post.title }}</h1>
        <p class="text-muted border-bottom pb-3 mb-3">
            Publié le {{ post.created_at|date("d/m/Y à H:i") }}
        </p>
        
        <div class="lead">
            {{ post.content|nl2br }}
        </div>
    </article>

    <hr class="my-4">
    <a href="/3A2526-Blog/public/" class="btn btn-secondary">&larr; Retour à l'accueil</a>
{% endblock %}
