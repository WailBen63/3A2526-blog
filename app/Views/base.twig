{# templates/base.twig #}
{# Layout principal - Structure transverse du projet #}
{# Conformit√© : UX-THEME-01/02, UX-ACCESSIBILITY-01, EF-ACL, 2.2.1 #}

<!doctype html>
<html lang="fr" 
      x-data="{ 
          theme: localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light'),
          isDyslexicFont: localStorage.getItem('dyslexicFont') === 'true' 
      }" 
      x-bind:data-bs-theme="theme">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    {# Bootstrap 5 & Alpine.js (Conformit√© 2.1 Technologies) #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    {# Police OpenDyslexic (Conformit√© UX-ACCESSIBILITY-01) #}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=OpenDyslexic:400,700&display=swap">
    <style>
        .dyslexic-mode * { font-family: 'OpenDyslexic', sans-serif !important; }
        .article-body { line-height: 1.8; font-size: 1.1rem; }
    </style>

    <title>{{ page_title|default('VTT Passion - Blog') }}</title>
</head>
<body class="d-flex flex-column min-vh-100" x-bind:class="{ 'dyslexic-mode': isDyslexicFont }">

    {# Navigation Responsive avec contr√¥le d'acc√®s (EF-ACL) #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/3A2526-Blog/public/">üöµ VTT Passion</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/3A2526-Blog/public/">Accueil</a></li>
                    <li class="nav-item"><a class="nav-link" href="/3A2526-Blog/public/a-propos">√Ä Propos</a></li>
                </ul>
                
                {# Barre d'outils UX (Th√®mes & Accessibilit√©) #}
                <div class="d-flex gap-2 align-items-center">
                    {# Switch Th√®me (UX-THEME-01) #}
                    <button @click="theme = (theme === 'dark' ? 'light' : 'dark'); localStorage.setItem('theme', theme)" 
                            class="btn btn-sm btn-outline-light">
                        <span x-show="theme === 'light'">üåô Sombre</span>
                        <span x-show="theme === 'dark'">‚òÄÔ∏è Clair</span>
                    </button>

                    {# Switch Dyslexie (UX-ACCESSIBILITY-01) #}
                    <button @click="isDyslexicFont = !isDyslexicFont; localStorage.setItem('dyslexicFont', isDyslexicFont)" 
                            class="btn btn-sm btn-outline-info">
                        <span x-show="!isDyslexicFont">üÖ∞Ô∏è Dyslexie</span>
                        <span x-show="isDyslexicFont">üî° Standard</span>
                    </button>

                    {# Menu Utilisateur (EF-ACL) #}
                    {% if session.get('user_id') %}
                        <div class="dropdown">
                            <button class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                                üë§ {{ session.get('user_name') }}
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                {% if session.get('user_role') in ['Administrateur', '√âditeur'] %}
                                    <li><a class="dropdown-item" href="/3A2526-Blog/public/admin">Tableau de Bord</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                {% endif %}
                                <li><a class="dropdown-item text-danger" href="/3A2526-Blog/public/logout">D√©connexion</a></li>
                            </ul>
                        </div>
                    {% else %}
                        <a href="/3A2526-Blog/public/login" class="btn btn-sm btn-outline-primary text-white border-white">Connexion</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    {# Syst√®me de Messages Flash (Gestionnaire de Session 2.2.1) #}
    <div class="container mt-3">
        {% for type in ['success', 'error'] %}
            {% if session.get('flash_' ~ type) %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : 'success' }} alert-dismissible fade show">
                    {{ session.get('flash_' ~ type) }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                {{ session.remove('flash_' ~ type) }}
            {% endif %}
        {% endfor %}
    </div>

    {# Contenu Principal (Template enfant) #}
    <main class="container my-4 flex-grow-1">
        {% block content %}{% endblock %}
    </main>

    <footer class="mt-auto py-4 bg-dark text-white text-center border-top border-secondary">
        <div class="container small">
            <p class="mb-0">&copy; {{ "now"|date("Y") }} VTT Blog - D√©velopp√© avec PHP 8, Twig & Bootstrap 5</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>