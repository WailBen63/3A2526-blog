{# templates/auth/login.twig #}
{# Page de connexion sécurisée - Conformité EF-ACL-06, 2.2.1 #}

{% extends "base.twig" %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h1 class="mb-4 text-center">Connexion</h1>

        {# Gestion des messages flash via le SessionManager (2.2.1) #}
        {% if session.get('flash_error') %}
            <div class="alert alert-danger">{{ session.get('flash_error') }}</div>
            {{ session.remove('flash_error') }}
        {% endif %}

        {% if session.get('flash_success') %}
            <div class="alert alert-success">{{ session.get('flash_success') }}</div>
            {{ session.remove('flash_success') }}
        {% endif %}

        {# Formulaire d'authentification (EF-ACL-06) #}
        <form action="/3A2526-Blog/public/login/process" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Se connecter</button>
        </form>

        {# Informations d'aide à l'évaluation (À retirer en production) #}
        <div class="mt-4 p-3 bg-light border rounded text-center small">
            <strong>Comptes de test :</strong><br>
            Administrateur : admin@vtt.com / password<br>
            Éditeur : editeur@vtt.com / password<br>
            Contributeur : contributeur@vtt.com / password
        </div>
    </div>
</div>
{% endblock %}