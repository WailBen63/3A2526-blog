{% extends "base.twig" %}

{% block content %}
    <div class="d-flex align-items-center mb-4">
        <h1 class="mb-0">{{ page_title }}</h1>
        <span class="badge bg-primary ms-3 fs-6">{{ articles|length }} article(s)</span>
    </div>

    {% if articles %}
        <div class="row g-4">
            {% for article in articles %}
                <div class="col-12 col-md-6">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ article.titre }}</h5>
                            <p class="card-text">{{ article.contenu|slice(0, 120) }}...</p>
                            
                            <!-- Tags de l'article -->
                            {% if article.tags %}
                                <div class="mt-2 mb-3">
                                    {% for tag in article.tags %}
                                        <span class="badge bg-secondary me-1">{{ tag.nom_tag }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            
                            <a href="/3A2526-blog/public/post/{{ article.id }}" class="btn btn-primary mt-auto">Lire la suite</a>
                        </div>
                        <div class="card-footer text-muted">
                            Publié le {{ article.date_creation|date("d/m/Y") }} par {{ article.nom_utilisateur }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">
            <h4 class="alert-heading">Aucun article</h4>
            <p class="mb-0">Aucun article n'est associé au tag "{{ tag.nom_tag }}" pour le moment.</p>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="/3A2526-blog/public/tags" class="btn btn-outline-secondary">← Voir tous les tags</a>
        <a href="/3A2526-blog/public/" class="btn btn-secondary">Retour à l'accueil</a>
    </div>
{% endblock %}