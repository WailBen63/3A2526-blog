{# templates/errors/404.twig #}
{# Page d'erreur 404 - Gestion de l'expérience utilisateur (UX) #}

{% extends "base.twig" %}

{% block content %}
    {# Mise en page centrée pour une focalisation sur le message (Conformité UX) #}
    <div class="text-center py-5">
        
        {# Identification rapide du type d'erreur #}
        <h1 class="display-1 text-muted">404</h1>
        
        {# Message clair et non technique pour l'utilisateur #}
        <h2 class="mb-4">Page non trouvée</h2>
        
        <p class="lead">Désolé, la page que vous cherchez n'existe pas ou a été déplacée.</p>
        
        {# Solution constructive : retour sécurisé vers l'accueil #}
        <div class="mt-5">
            <a href="/3A2526-Blog/public/" class="btn btn-primary btn-lg">
                Retour à l'accueil
            </a>
        </div>

    </div>
{% endblock %}