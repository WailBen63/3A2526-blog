{# templates/tags/index.twig #}
{# Exploration par th√©matiques - Conformit√© EF-TAG-02, EF-ARTICLE-04 #}

{% extends "base.twig" %}

{% block content %}
    <h1 class="mb-4">{{ page_title }}</h1>

    {% if tags %}
        {# Cloud de tags interactif (EF-TAG-02) #}
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3 text-muted small uppercase fw-bold">Nuage de tags</h5>
                <div class="d-flex flex-wrap gap-3">
                    {% for tag in tags %}
                        <a href="/3A2526-blog/public/tag/{{ tag.slug }}" 
                           class="btn btn-outline-primary rounded-pill position-relative">
                            {{ tag.nom_tag }}
                            {% if tag.nb_articles > 0 %}
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger shadow-sm">
                                    {{ tag.nb_articles }}
                                </span>
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="row">
            {# Liste de popularit√© (EF-TAG-02) #}
            <div class="col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">üî• Th√©matiques populaires</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            {% for tag in tags|slice(0, 5) %}
                                <a href="/3A2526-blog/public/tag/{{ tag.slug }}" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                                    <span># {{ tag.nom_tag }}</span>
                                    <span class="badge bg-primary-subtle text-primary rounded-pill">{{ tag.nb_articles }} articles</span>
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            
            {# Statistiques calcul√©es via Twig (D√©monstration technique) #}
            <div class="col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm bg-light">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="text-center mb-4">Vue d'ensemble</h5>
                        <div class="row text-center">
                            <div class="col-6 border-end">
                                <h3 class="fw-bold">{{ tags|length }}</h3>
                                <small class="text-muted">Tags cr√©√©s</small>
                            </div>
                            <div class="col-6">
                                {# Utilisation de filtres Twig complexes #}
                                <h3 class="fw-bold">{{ tags|filter(t => t.nb_articles > 0)|length }}</h3>
                                <small class="text-muted">Tags actifs</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-light text-center py-5 border">
            <p class="mb-0 text-muted">Aucun tag n'a √©t√© cr√©√© pour le moment.</p>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="/3A2526-blog/public/" class="btn btn-link text-decoration-none">‚Üê Retour aux articles</a>
    </div>
{% endblock %}