{# templates/contact.twig #}
{# Formulaire de contact avec validation et feedback - Conformité UX-RESPONSIVE #}

{% extends "base.twig" %}

{% block content %}
    <h1 class="mb-4">{{ page_title }}</h1>

    {# Message de confirmation d'envoi #}
    {% if success_message %}
        <div class="alert alert-success shadow-sm" role="alert">
            {{ success_message }}
        </div>
    {% endif %}

    <div class="row justify-content-center">
        <div class="col-lg-7">
            <p class="text-muted">Une question ? Une suggestion ? Contactez-nous via le formulaire ci-dessous.</p>
            
            {# Formulaire POST (Sécurité et intégrité des données) #}
            <form action="/3A2526-Blog/public/contact" method="POST" class="mt-4" novalidate>
                
                {# Champ Nom avec gestion d'erreur (UX-Feedback) #}
                <div class="mb-3">
                    <label for="name" class="form-label">Votre Nom</label>
                    <input type="text" 
                           class="form-control {% if errors.name %}is-invalid{% endif %}" 
                           id="name" 
                           name="name" 
                           value="{{ old_input.name|default('') }}" 
                           placeholder="Ex: Jean Dupont"
                           required>
                    {% if errors.name %}
                        <div class="invalid-feedback">{{ errors.name }}</div>
                    {% endif %}
                </div>

                {# Champ Email avec validation de format #}
                <div class="mb-3">
                    <label for="email" class="form-label">Adresse Email</label>
                    <input type="email" 
                           class="form-control {% if errors.email %}is-invalid{% endif %}" 
                           id="email" 
                           name="email" 
                           value="{{ old_input.email|default('') }}" 
                           placeholder="nom@exemple.com"
                           required>
                    {% if errors.email %}
                        <div class="invalid-feedback">{{ errors.email }}</div>
                    {% endif %}
                </div>
                
                {# Champ Message #}
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control {% if errors.message %}is-invalid{% endif %}" 
                              id="message" 
                              name="message" 
                              rows="6" 
                              placeholder="Votre message ici..."
                              required>{{ old_input.message|default('') }}</textarea>
                    {% if errors.message %}
                        <div class="invalid-feedback">{{ errors.message }}</div>
                    {% endif %}
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Envoyer le message</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}