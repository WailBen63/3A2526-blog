{# templates/admin/comments/index.twig #}
{# Interface de mod√©ration des commentaires - Conformit√© EF-COMMENT-03, EF-ADMIN-01/03 #}

{% extends "base.twig" %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{ page_title }}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/3A2526-Blog/public/admin" class="btn btn-sm btn-outline-secondary">
            ‚Üê Retour au tableau de bord
        </a>
    </div>
</div>

{% if comments %}
    {# Table responsive pour la mod√©ration (EF-COMMENT-03) #}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Auteur</th>
                    <th>Email</th>
                    <th>Contenu</th>
                    <th>Article</th>
                    <th>Statut</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.nom_auteur }}</td>
                    <td>
                        {% if comment.email_auteur %}
                            <a href="mailto:{{ comment.email_auteur }}">{{ comment.email_auteur }}</a>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        <small title="{{ comment.contenu }}">{{ comment.contenu|slice(0, 50) }}...</small>
                    </td>
                    <td>
                        {% if comment.article_titre %}
                            <a href="/3A2526-Blog/public/post/{{ comment.article_id }}" target="_blank">
                                {{ comment.article_titre|slice(0, 30) }}...
                            </a>
                        {% else %}
                            <span class="text-muted">Article supprim√©</span>
                        {% endif %}
                    </td>
                    <td>
                        {# Statuts avec indicateurs visuels (EF-COMMENT-03) #}
                        <span class="badge 
                            {% if comment.statut == 'Approuv√©' %}bg-success
                            {% elseif comment.statut == 'Rejet√©' %}bg-danger
                            {% else %}bg-warning{% endif %}">
                            {{ comment.statut }}
                        </span>
                    </td>
                    <td>{{ comment.date_commentaire|date("d/m/Y H:i") }}</td>
                    <td>
                        {# Actions de mod√©ration rapide (Approuver/Rejeter/Supprimer) #}
                        <div class="btn-group btn-group-sm">
                            {% if comment.statut != 'Approuv√©' %}
                                <form action="/3A2526-Blog/public/admin/comments/{{ comment.id }}/approve" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-success" title="Approuver">‚úì</button>
                                </form>
                            {% endif %}
                            
                            {% if comment.statut != 'Rejet√©' %}
                                <form action="/3A2526-Blog/public/admin/comments/{{ comment.id }}/reject" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-warning" title="Rejeter">‚úó</button>
                                </form>
                            {% endif %}
                            
                            <form action="/3A2526-Blog/public/admin/comments/{{ comment.id }}/delete" method="POST" class="d-inline" 
                                  onsubmit="return confirm('Supprimer d√©finitivement ce commentaire ?')">
                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">üóëÔ∏è</button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# Vue synth√©tique des statistiques (EF-ADMIN-01) #}
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">{{ comments|length }}</h5>
                    <p class="card-text">Total commentaires</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">{{ comments|filter(c => c.statut == 'En attente')|length }}</h5>
                    <p class="card-text">En attente de mod√©ration</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">{{ comments|filter(c => c.statut == 'Approuv√©')|length }}</h5>
                    <p class="card-text">Approuv√©s</p>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info">
        Aucun commentaire pour le moment.
    </div>
{% endif %}
{% endblock %}