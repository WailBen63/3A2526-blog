{# templates/admin/dashboard.twig #}
{# Interface centrale de gestion - Conformité EF-ADMIN-01, EF-ADMIN-02, EF-ADMIN-03 #}

{% extends "base.twig" %}

{% block content %}
<div class="container-fluid">
    {# En-tête avec titre dynamique (SEO/UX) #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ page_title }}</h1>
        <span class="badge bg-success">Accès Administrateur</span>
    </div>

    {# Section Statistiques clés (EF-ADMIN-01) #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ stats.total_posts }}</h5>
                    <p class="card-text">Articles publiés</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ stats.total_comments }}</h5>
                    <p class="card-text">Total commentaires</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            {# Indicateur de modération (EF-COMMENT-04) #}
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ stats.pending_comments }}</h5>
                    <p class="card-text">Commentaires à modérer</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ stats.total_users }}</h5>
                    <p class="card-text">Membres inscrits</p>
                </div>
            </div>
        </div>
    </div>

    {# Fil d'activité récent (EF-ADMIN-03) #}
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Dernières Publications</h5>
                    <a href="/3A2526-Blog/public/admin/articles" class="btn btn-sm btn-outline-primary">Tout voir</a>
                </div>
                <div class="card-body">
                    {% if recent_posts %}
                        <div class="list-group list-group-flush">
                            {% for post in recent_posts %}
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="mb-1 text-truncate" style="max-width: 70%;">{{ post.titre }}</h6>
                                        <span class="badge bg-{{ post.statut == 'Public' ? 'success' : 'secondary' }}">{{ post.statut }}</span>
                                    </div>
                                    <small class="text-muted">{{ post.date_creation|date("d/m/Y H:i") }}</small>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted italic">Aucune activité récente.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Derniers Commentaires</h5>
                    <a href="/3A2526-Blog/public/admin/comments" class="btn btn-sm btn-outline-primary">Modérer</a>
                </div>
                <div class="card-body">
                    {% if recent_comments %}
                        <div class="list-group list-group-flush">
                            {% for comment in recent_comments %}
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <strong>{{ comment.nom_auteur }}</strong>
                                        <small class="text-muted">{{ comment.date_commentaire|date("d/m/Y") }}</small>
                                    </div>
                                    <p class="mb-1 small text-truncate">{{ comment.contenu }}</p>
                                    <small class="text-primary">Sur : {{ comment.article_titre|slice(0, 40) }}...</small>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted italic">Aucun nouveau commentaire.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Navigation Administrative Rapide (EF-ADMIN-02) #}
    <div class="row mt-2">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="mb-3">Raccourcis de gestion</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="/3A2526-Blog/public/admin/articles" class="btn btn-primary">Articles</a>
                        <a href="/3A2526-Blog/public/admin/comments" class="btn btn-warning">Modération</a>
                        <a href="/3A2526-Blog/public/admin/users" class="btn btn-info text-white">Utilisateurs</a>
                        <a href="/3A2526-Blog/public/admin/tags" class="btn btn-success">Tags</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}