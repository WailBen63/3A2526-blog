{# templates/admin/tags/edit.twig #}
{# Formulaire de modification de tag (CRUD) - Conformité EF-TAG-01 #}

{% extends "base.twig" %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{ page_title }}</h1>
    <a href="/3A2526-Blog/public/admin/tags" class="btn btn-sm btn-outline-secondary">← Retour</a>
</div>

{# Gestion des erreurs de validation (Unicité, longueur) #}
{% if errors %}
    <div class="alert alert-danger">
        <ul class="mb-0">
            {% for error in errors %}
            <li>{{ error }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

<form action="/3A2526-Blog/public/admin/tags/{{ tag_id }}/update" method="POST">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Modifier le tag</h5>
                </div>
                <div class="card-body">
                    {# Champ Nom du tag avec pré-remplissage intelligent #}
                    <div class="mb-3">
                        <label for="nom_tag" class="form-label">Nom du tag *</label>
                        <input type="text" 
                               class="form-control" 
                               id="nom_tag" 
                               name="nom_tag" 
                               value="{{ tag.nom_tag|default(old_input.nom_tag|default('')) }}" 
                               required
                               maxlength="50">
                        <div class="form-text">
                            Modifier le nom entraînera la régénération automatique du slug.
                        </div>
                    </div>

                    {# Visualisation du slug actuel (Lecture seule) #}
                    {% if tag.slug %}
                    <div class="mb-3">
                        <label class="form-label text-muted">Slug actuel (URL)</label>
                        <input type="text" class="form-control bg-light" value="{{ tag.slug }}" readonly>
                    </div>
                    {% endif %}
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                    <a href="/3A2526-Blog/public/admin/tags" class="btn btn-secondary">Annuler</a>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}