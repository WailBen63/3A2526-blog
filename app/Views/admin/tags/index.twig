{# templates/admin/tags/index.twig #}
{# Gestion de la liste des tags et statistiques - Conformité EF-TAG-01, EF-TAG-02 #}

{% extends "base.twig" %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{ page_title }}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        {# Accès direct à la création (EF-TAG-01) #}
        <a href="/3A2526-Blog/public/admin/tags/create" class="btn btn-sm btn-outline-primary">
            + Nouveau tag
        </a>
        <a href="/3A2526-Blog/public/admin" class="btn btn-sm btn-outline-secondary ms-2">
            ← Tableau de bord
        </a>
    </div>
</div>

{% if tags %}
    {# Interface responsive conforme à UX-RESPONSIVE-02 #}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom du tag</th>
                    <th>Slug</th>
                    <th>Articles associés</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td><span class="badge bg-secondary">{{ tag.nom_tag }}</span></td>
                    <td><code>{{ tag.slug }}</code></td>
                    {# Affichage du compteur d'articles (EF-TAG-02) #}
                    <td><span class="badge bg-info text-dark">{{ tag.nb_articles }}</span></td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="/3A2526-Blog/public/admin/tags/{{ tag.id }}/edit" class="btn btn-outline-warning">
                                Modifier
                            </a>
                            
                            {# Suppression avec message de prévention sur les associations (EF-ARTICLE-04) #}
                            <form action="/3A2526-Blog/public/admin/tags/{{ tag.id }}/delete" method="POST" class="d-inline" 
                                  onsubmit="return confirm('Supprimer ce tag ? Les associations avec les articles seront également nettoyées.')">
                                <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# Vue synthétique des statistiques du système de tags (EF-ADMIN-01) #}
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ tags|length }}</h5>
                    <p class="card-text">Total tags créés</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ tags|filter(t => t.nb_articles > 0)|length }}</h5>
                    <p class="card-text">Tags actifs (utilisés)</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ tags|filter(t => t.nb_articles == 0)|length }}</h5>
                    <p class="card-text">Tags inutilisés</p>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info">
        Aucun tag n'a été créé pour le moment.
    </div>
{% endif %}
{% endblock %}