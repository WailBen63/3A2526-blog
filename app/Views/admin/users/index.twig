{% extends "base.twig" %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{ page_title }}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/3A2526-Blog/public/admin/users/create" class="btn btn-sm btn-outline-primary">
            + Nouvel utilisateur
        </a>
        <a href="/3A2526-Blog/public/admin" class="btn btn-sm btn-outline-secondary ms-2">
            ‚Üê Tableau de bord
        </a>
    </div>
</div>

{% if users %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>R√¥les</th>
                    <th>Statut</th>
                    <th>Inscription</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>
                        <strong>{{ user.nom_utilisateur }}</strong>
                        {% if user.id == session.get('user_id') %}
                            <span class="badge bg-info">Vous</span>
                        {% endif %}
                    </td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% if user.roles_names %}
                            {% set roles = user.roles_names|split(',') %}
                            {% for role in roles %}
                                <span class="badge 
                                    {% if role == 'Administrateur' %}bg-danger
                                    {% elseif role == '√âditeur' %}bg-warning
                                    {% else %}bg-secondary{% endif %}">
                                    {{ role }}
                                </span>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted">Aucun r√¥le</span>
                        {% endif %}
                    </td>
                    <td>
                        <span class="badge {% if user.est_actif %}bg-success{% else %}bg-danger{% endif %}">
                            {{ user.est_actif ? 'Actif' : 'Inactif' }}
                        </span>
                    </td>
                    <td>{{ user.date_inscription|date("d/m/Y") }}</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            {% if user.id != session.get('user_id') %}
                                <form action="/3A2526-Blog/public/admin/users/{{ user.id }}/toggle-status" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-{{ user.est_actif ? 'warning' : 'success' }} btn-sm" 
                                            title="{{ user.est_actif ? 'D√©sactiver' : 'Activer' }}">
                                        {{ user.est_actif ? '‚è∏Ô∏è' : '‚ñ∂Ô∏è' }}
                                    </button>
                                </form>
                                
                                <form action="/3A2526-Blog/public/admin/users/{{ user.id }}/delete" method="POST" class="d-inline" 
                                      onsubmit="return confirm('Supprimer d√©finitivement cet utilisateur ?')">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Supprimer">
                                        üóëÔ∏è
                                    </button>
                                </form>
                            {% else %}
                                <span class="text-muted small">Actions limit√©es</span>
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Statistiques -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">{{ users|length }}</h5>
                    <p class="card-text">Total utilisateurs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">{{ users|filter(u => u.est_actif)|length }}</h5>
                    <p class="card-text">Utilisateurs actifs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">{{ users|filter(u => u.roles_names matches '/Administrateur/')|length }}</h5>
                    <p class="card-text">Administrateurs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">{{ users|filter(u => u.roles_names matches '/√âditeur/')|length }}</h5>
                    <p class="card-text">√âditeurs</p>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info">
        <h4 class="alert-heading">Aucun utilisateur</h4>
        <p class="mb-0">Aucun utilisateur n'a √©t√© trouv√© dans la base de donn√©es.</p>
    </div>
{% endif %}
{% endblock %}