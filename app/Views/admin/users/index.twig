{# templates/admin/users/index.twig #}
{# Liste des utilisateurs et gestion des acc√®s (RBAC) - Conformit√© EF-ACL-01, EF-ACL-04 #}

{% extends "base.twig" %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{ page_title }}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        {# Lien direct vers la cr√©ation d'utilisateur (EF-ACL-01) #}
        <a href="/3A2526-Blog/public/admin/users/create" class="btn btn-sm btn-outline-primary">
            + Nouvel utilisateur
        </a>
        <a href="/3A2526-Blog/public/admin" class="btn btn-sm btn-outline-secondary ms-2">
            ‚Üê Tableau de bord
        </a>
    </div>
</div>

{% if users %}
    {# Interface responsive conforme √† UX-RESPONSIVE-02 #}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>R√¥les</th>
                    <th>Statut</th>
                    <th>Inscription</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>
                        <strong>{{ user.nom_utilisateur }}</strong>
                        {# Identification de l'utilisateur courant pour la s√©curit√© #}
                        {% if user.id == session.get('user_id') %}
                            <span class="badge bg-info">Vous</span>
                        {% endif %}
                    </td>
                    <td>{{ user.email }}</td>
                    <td>
                        {# Visualisation multi-r√¥les (EF-ACL-04) #}
                        {% if user.roles_names %}
                            {% for role in user.roles_names|split(',') %}
                                <span class="badge 
                                    {% if role == 'Administrateur' %}bg-danger
                                    {% elseif role == '√âditeur' %}bg-warning
                                    {% else %}bg-secondary{% endif %}">
                                    {{ role }}
                                </span>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted small">Aucun r√¥le</span>
                        {% endif %}
                    </td>
                    <td>
                        {# Indicateur d'activation du compte #}
                        <span class="badge {% if user.est_actif %}bg-success{% else %}bg-danger{% endif %}">
                            {{ user.est_actif ? 'Actif' : 'Inactif' }}
                        </span>
                    </td>
                    <td>{{ user.date_inscription|date("d/m/Y") }}</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            {# S√©curit√© : Emp√™cher l'auto-d√©sactivation ou l'auto-suppression #}
                            {% if user.id != session.get('user_id') %}
                                {# Toggle du statut (EF-ACL-01) #}
                                <form action="/3A2526-Blog/public/admin/users/{{ user.id }}/toggle-status" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-secondary" title="Changer le statut">
                                        {{ user.est_actif ? '‚è∏Ô∏è' : '‚ñ∂Ô∏è' }}
                                    </button>
                                </form>
                                
                                {# Suppression d√©finitive #}
                                <form action="/3A2526-Blog/public/admin/users/{{ user.id }}/delete" method="POST" class="d-inline" 
                                      onsubmit="return confirm('Supprimer d√©finitivement cet utilisateur ?')">
                                    <button type="submit" class="btn btn-outline-danger" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            {% else %}
                                <span class="text-muted small italic">Gestion via Profil</span>
                            {% endif %}
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# Statistiques de la base utilisateurs (EF-ADMIN-01) #}
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">{{ users|length }}</h5>
                    <p class="card-text small">Utilisateurs inscrits</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">{{ users|filter(u => u.est_actif)|length }}</h5>
                    <p class="card-text small">Comptes actifs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">{{ users|filter(u => u.roles_names matches '/Administrateur/')|length }}</h5>
                    <p class="card-text small">Administrateurs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">{{ users|filter(u => u.roles_names matches '/√âditeur/')|length }}</h5>
                    <p class="card-text small">√âditeurs</p>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="alert alert-info">Aucun utilisateur trouv√© dans le syst√®me.</div>
{% endif %}
{% endblock %}