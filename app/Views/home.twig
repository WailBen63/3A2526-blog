{% extends "base.twig" %}

{% block content %}
    <h1 class="mb-4">{{ page_title }}</h1>

    <div x-data="{ open: false }" class="mb-4">
        <button @click="open = !open" class="btn btn-outline-primary btn-sm">
            <span x-show="!open">Afficher</span><span x-show="open">Masquer</span> le message
        </button>
        <div x-show="open" x-transition class="alert alert-info mt-2">
            Ceci est un blog mobile-first avec Alpine.js !
        </div>
    </div>

    <div class="row g-4">
        {% for post in posts %}
    <div class="col-12 col-md-6">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{ post.titre }}</h5>  {# 'titre' pas 'title' #}
                <p class="card-text">{{ post.contenu|slice(0, 120) }}...</p> {# 'contenu' pas 'content' #}
                <a href="/3A2526-blog/public/post/{{ post.id }}" class="btn btn-primary mt-auto">Lire la suite</a>
            </div>
            <div class="card-footer text-muted">
                Publié le {{ post.date_creation|date("d/m/Y") }} {# 'date_creation' pas 'created_at' #}
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12">
        <p class="alert alert-warning">Aucun article à afficher pour le moment. 
           <br>Statut des articles dans la BDD: 
           {% for post in posts %}{{ post.statut }}{% endfor %}
        </p>
    </div>
{% endfor %}
    </div>
{% endblock %}